{
  "name": "@creators/services",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Rachit Srivastava",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn dev:upload\" \"yarn dev:validate\"",
    "dev:kafka": "kafka-server-start /opt/homebrew/etc/kafka/server.properties",
    "dev:user": "nodemon --quiet --watch  servers --ext ts --exec ts-node servers/user/index.ts",
    "dev:upload": "nodemon --quiet --watch servers --ext ts --exec ts-node servers/upload/index.ts",
    "dev:validate": "nodemon --quiet --watch servers --ext ts --exec ts-node servers/validate/index.ts",
    "dev:zookeper": "zookeeper-server-start /opt/homebrew/etc/kafka/zookeeper.properties",
    "eslint": "eslint .",
    "standalone:upload": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/upload/index.ts",
    "standalone:user": "nodemon --watch servers --watch ../../packages/ --ext ts --exec ts-node servers/user/index.ts",
    "test-report": "nyc --reporter=text --reporter=html mocha ./test",
    "update-nginx": "node updateNginxConfig.js"
  },
  "dependencies": {
    "@creators/aws": "*",
    "@creators/celery": "*",
    "@creators/compress": "*",
    "@creators/kafka": "*",
    "@creators/loaders": "*",
    "@creators/logger": "*",
    "@creators/platforms": "*",
    "@creators/redis": "^1.0.0",
    "aws-sdk": "^2.1599.0",
    "body-parser": "^1.20.2",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.7.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.3.1",
    "redis": "^4.6.13",
    "sequelize": "^6.37.3",
    "sharp": "^0.33.3",
